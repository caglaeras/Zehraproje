<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ZehraProje.HomePage"
             Title="Ana Sayfa">

    <StackLayout Padding="20" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">

        <Label Text="Welcome to Dizi/Film Tracker!"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <Button Text="← Şu Anda İzlediklerim"
                FontSize="18"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                Command="{Binding NavigateToCurrentlyWatchingCommand}" />

        <Button Text="İzlemek İstediklerim →"
                FontSize="18"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                Command="{Binding NavigateToWatchlistCommand}" />

    </StackLayout>
</ContentPage>